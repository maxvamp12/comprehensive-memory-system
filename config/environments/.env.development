# Development Environment Configuration
# For local development and testing environments

# Load Balancer Configuration
LOAD_BALANCER_HOST=0.0.0.0
LOAD_BALANCER_PORT=8082

# Service Endpoints (Development)
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMADB_PATH=/api/v2/tenants/default_tenant/databases/default_database
CHROMADB_HEALTH_PATH=/api/v2/heartbeat

MEMORY_SERVICE_HOST=localhost
MEMORY_SERVICE_PORT=3000
MEMORY_SERVICE_PATH=/health
MEMORY_SERVICE_HEALTH_PATH=/health

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s,%(msecs)03d - %(levelname)s - %(message)s

# Performance Settings
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30