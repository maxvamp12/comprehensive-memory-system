# Production Environment Configuration
# For production deployments with high availability requirements

# Load Balancer Configuration
LOAD_BALANCER_HOST=0.0.0.0
LOAD_BALANCER_PORT=8082

# Service Endpoints (Production - Replace with your actual production servers)
CHROMADB_HOST=your-chroma-server.com
CHROMADB_PORT=8001
CHROMADB_PATH=/api/v2/tenants/default_tenant/databases/default_database
CHROMADB_HEALTH_PATH=/api/v2/heartbeat

MEMORY_SERVICE_HOST=your-memory-service.com
MEMORY_SERVICE_PORT=3000
MEMORY_SERVICE_PATH=/health
MEMORY_SERVICE_HEALTH_PATH=/health

# Health Check Settings
HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s,%(msecs)03d - %(levelname)s - %(message)s

# Performance Settings
MAX_CONNECTIONS=10000
REQUEST_TIMEOUT=10

# Security Settings (for production)
ENABLE_SSL=false
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60  # seconds